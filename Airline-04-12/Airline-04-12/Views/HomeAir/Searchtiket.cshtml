<!-- Top Destinations -->
<section class="flight-destinations">
    <div class="container bg-white">
        <div class="row">
            <form action="~/Checkout/Index" method="post">
                <input type="hidden" name="songuoi" value="@ViewBag.songuoi" />
                <div class="col-md-12">
                    <div class="flight-head">
                        <div class="">
                            <div class="col-md-10">
                                <nav aria-label="breadcrumb">
                                    @{var Date = ViewBag.dateNow; }
                                 

                                </nav>
                            </div>

                            <div class="col-md-2"> <a href="~/chuyen-bay-trong-ngay" class="btn-blue btn-red btn-style-1 w-100">View All</a></div>
                        </div>
                    </div>

                </div>
                <div class="flight-table">
                    <table border="1">
                        <thead>
                            <tr>
                                <th>Airline</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Detail</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        <img src="~/public/images/flight/@item.AirlineImg" alt="">
                                    </td>
                                    <td>
                                        <h6>@item.DepartureAddress</h6>
                                    </td>
                                    <td>
                                        <h6>@item.ArrivalAddress</h6>
                                    </td>
                                    <td>
                                        <a href="~/chuyen-bay/@item.UserId">View All</a>
                                    </td>
                                    <td>
                                        <h6><strong class="color-red-3">@item.Price $</strong></h6>
                                        <p class="emi">(Currency - $)</p>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>

</section>
<script>
        $("#form-search").submit(function (event) {
            $("#ngaybay").text("");
            $("#ngayve").text("");
           var ngaybay = $("#departure_date").val();
            var ngayve = $("#arrival_date").val();
            var typeticket = $("#ticketCheck").val();


            if (ngaybay == "Ngày Bay") {
                $("#ngaybay").text("Please select your flight date");

                return false;

            }
            if (typeticket == 2) {
                if (ngayve == "Ngày về") {
                    $("#ngayve").text("Please select a return date");
                    return false
                }
                else {
                    return true;
                }
            }
            return true;

	});
        $(document).ready(function () {
            // By Default Disable radio button
            $("#arrival_date").attr('disabled', true);
            $("form input:radio").change(function () {
                if ($(this).val() == "enable") {
                    $("#arrival_date").attr('disabled', false);
                    $("#ticketCheck").val(2);
                }
                else {
                    $("#arrival_date").attr('disabled', true);
                    $("#ticketCheck").val(1);
                }
            });
        });
</script>